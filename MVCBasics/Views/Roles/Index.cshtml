@{
    ViewData["Title"] = "Role Index";
}

@model IEnumerable<IdentityRole>

<h1>Role Index</h1>

<table class="table roles">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Action</th>
    </tr>
    @foreach (IdentityRole role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <span class="link" id="view-users-in-role-@role.Name" onclick="GetUsersInRole('@role.Name')">View Users</span>
            </td>
        </tr>
        <tr id="users-in-role-@role.Name"></tr>
    }
</table>
