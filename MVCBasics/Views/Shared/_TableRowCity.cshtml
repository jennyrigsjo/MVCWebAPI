@model City

<div class="row city">
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.ID</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Name</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Country.Name</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <span id="view-inhabitants-city-@Model.ID" class="link" onclick="GetCityInhabitants(@Model.ID)">View inhabitants</span>
        <a class="edit" asp-controller="Cities" asp-action="UpdateCity" asp-route-id="@Model.ID">Edit</a>
        <a class="delete" asp-controller="Cities" asp-action="DeleteCity" asp-route-id="@Model.ID">Delete</a>
    </div>
</div>
<div id="inhabitants-city-@Model.ID"></div>
