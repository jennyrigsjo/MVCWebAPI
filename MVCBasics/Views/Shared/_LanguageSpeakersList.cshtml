@model PeopleViewModel

@{
    Layout = null; // Prevent layout from being rendered twice
}

@if (Model.List.Any())
{
    <div class="table language-speakers embedded">
        <div class="row column-headers">
            <div class="column-header col-xs-3 col-sm-3 col-md-3 col-lg-3">Name</div>
            <div class="column-header col-xs-3 col-sm-3 col-md-3 col-lg-3">Languages</div>
        </div>
        @foreach (Person person in Model.List)
        {
                <div class="row person">
                    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@person.Name</div>
                    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@App_Code_Shared.GetLanguageString(person)</div>
                </div>
        }
    </div>
}

else
{
    <p>List has no items.</p>
}

